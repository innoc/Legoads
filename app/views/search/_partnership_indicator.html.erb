<%@result_user%>
<script type="text/javascript">
jQuery(document).ready(function($) {
   $(".<%="#{user.id}_request"%>").click(function () {
   $(".<%="#{user.id}_request"%>").hide();
   $(".<%="#{user.id}_pending"%>").show();
   })
 });
 
 </script>

<span style="font-size:11px; color:red; display:none" class="<%="#{user.id}_pending"%>"><br/><br/>request is pending</span>

<%unless Partnership.exists?(@user,user) || @user.id == user.id%>

<span class="<%="#{user.id}_request"%>">
<br/>
<%=link_to image_tag("request.png"),{:controller=>'partnership',:action=>'create',:id=>user.id},:remote=>true%>
</span>
<%else%>
<%if partnership_indicator(@user,user)=="yes_boss"%>
<br/>
<%=link_to image_tag("profile_big_icon.png"),{:controller=>"profile",:action=>"profile",:id=>user.id,:sort=>"all"}%>
<%else%>
<%unless @user.id == user.id%>
<span style="font-size:11px; color:red;"><br/>request is pending</span>
<%end%>
<%end%>

<%end%>